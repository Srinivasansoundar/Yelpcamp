<% layout("layouts/boilerplate")%>
    <div class="container d-flex justify-content-center align-items-center mt-2 mb-2">
        <div class="row" style="width:80%;">
            <div class="col-md-6 offset-md-3 col-xl-6 offset-xl-3">
                <div class="card shadow">
                    <img crossorigin="anonymous" src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
                        alt="" class="card-img-top">
                    <div class="card body">
                        <h5 class="card-title mt-2 px-2">Register</h5>
                        <form action="/register" method="POST" class="validated-form" novalidate>
                            <div class="mb-2 px-2">
                                <label class="form-label" for="useranme">Username</label>
                                <input class="form-control" type="text" id="username" name="username" autofocus required>
                                <div class="valid-feedback">
                                    Looks good
                                </div>
                            </div>
                            <div class="mb-2 px-2">
                                <label class="form-label" for="email">Email</label>
                                <input class="form-control" type="email" id="email" name="email" required>
                                <div class="valid-feedback">
                                    Looks good
                                </div>
                            </div>
                            <div class="mb-2 px-2">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password" required>
                                <div class="valid-feedback">
                                    Looks good
                                </div>
                            </div>
                            <div class="d-grip p-2">
                            <button class="btn btn-success">Register</button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

